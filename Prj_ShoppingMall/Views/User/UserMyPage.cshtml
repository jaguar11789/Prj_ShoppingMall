                <div>선물함</div>
            </a>
        </div>
    </div>
</body>
</html>
<script>
    $(document).ready(function () {
        if (!('@Session["strUserId"]')) {
            alert("로그인이 필요합니다.");
            location.href = "UserLogin";  // 로그인 페이지로 리다이렉트
        }
    });
</script>